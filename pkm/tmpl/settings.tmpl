
<QWidget layout='QVBoxLayout' geometry='(0,0,700,500)' padding='0'>
  <Set attribute='Qt.WA_TranslucentBackground'/>
  <Set windowFlags='Qt.Dialog | Qt.FramelessWindowHint'/>
  <Set windowModality='Qt.ApplicationModal'/>
  <Set windowTitle='APPNAME+" Settings"'/>
  <!-- <TitleBar id='titlebar' title='APPNAME+" Settings"'/> -->

  <QWidget id='settings' layout='QHBoxLayout' padding='1' spacing='0'>

    <!-- Side Panel -->
    <QWidget id='sidepanelwrap' layout='QVBoxLayout' padding='0'>
      <QWidget id='sidepanel' layout='QVBoxLayout' padding='15' spacing='0'>
        
        <!-- Title -->
        <QWidget id='sidepanelwrap' layout='QVBoxLayout' padding='0' spacing='0'>
          <QWidget id='sidepanelwrap' layout='QHBoxLayout' padding='0' spacing='3'>
            <QLabel id='title' text='APPNAME'/>
            <QLabel id='version' text='"v"+VERSION'/>
          </QWidget>
          <QLabel text='github.com/pkkid/pkmeter' property='(class,subtext)'/>
        </QWidget>
        <Spacing args='20'/>
        
        <!-- General Settings -->
        <QPushButton id='applicationsettings' text='Application Settings'>
          <Set property='(class,selected)'/>
          <Connect clicked='generalSettingsClicked'/>
        </QPushButton>
        <Spacing args='20'/>
        <!-- Available Plugins -->
        <QLabel text='Available Plugins'/>
        <Spacing args='3'/>
        <QComboBox id='pluginlist'>
          <Connect currentIndexChanged='updateComponentList'/>
          <Repeater for='plugin' in='app.plugins.values()'>
            <Item args='(plugin.name,plugin.varname)'/>
          </Repeater>
        </QComboBox>
        <!-- Component List -->
        <QListWidget id='componentlist'>
          <Connect itemClicked='updateContent'/>
        </QListWidget>
      </QWidget>
    </QWidget>

    <!-- Content Panel -->
    <QWidget id='contentwrap' layout='QVBoxLayout' padding='0' spacing='0'>
      <QWidget id='content' layout='QVBoxLayout' padding='0'>
        <!-- Application Settings - Content replaced when selecting a plugin and component. -->
        <QWidget id='appsettings' layout='QVBoxLayout' spacing='20'>
          <QLabel text='Application settings not yet defined.'/>
        </QWidget>
      </QWidget>
      <Stretch/>
    </QWidget>

  </QWidget>
</QWidget>
