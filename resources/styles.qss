/* TITLEBAR */
#titlebar #appicon {
  border-image: url('resources/icons/chart-box.png') 0 0 0 0 stretch stretch;
  min-width: 20px;
  max-width: 20px;
  min-height: 20px;
  max-height: 20px;
}
#titlebar QPushButton {
  border: rgba(0,0,0,0);
  color: $secondarytext;
  font-size: 18px;
}
#titlebar QPushButton:hover {
  color: $primarytext;
}

/* SETTINGS WINDOW */
#settings {
  border-radius: 8px;
  border: 1px solid #444;
  background-color: $secondary;
}
#settings #sidepanel {
  max-width: 190px;
  min-width: 190px;
}
#settings #sidepanel QPushButton {
  background-color: $secondarydark;
  padding: 8px;
  border-radius: 3px;
}
#settings #sidepanel QPushButton:hover {
  background-color: $secondarylight;
}
#settings #sidepanel QPushButton[class=selected] {
  background-color: $secondarylight;
  color: $primarytext;
}
#settings QLabel#plugintitle {
  border-bottom: 1px solid rgba(255,255,255,0.1);
}
#settings QLabel[class=subtext] {
  font-size: 10px;
  color: $dimtext;
  padding-left: 2px;
}
#settings #content QLabel {
  max-width: 100px;
}
#settings #content QLabel[class=formlabel] {
  margin-right: 20px;
}


/* DESKTOP WIDGET */
#deskwidget,
QWidget[class=deskwidget] {
  background-color: rgba(0,0,0,0.5);
  border-radius: 5px;
}
QWidget[class=deskwidget] QLabel {
  color: #ffffff;
}
